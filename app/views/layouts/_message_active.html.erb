<div class="modal modalSlider" id="active_<%=id_value%>">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Atenção</h3>
    </div>
    <div class="modal-body">
        <p>Deseja realmente ativar esse item ?<p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
        <%=link_to 'Continuar', {:controller => controller, :action =>action_name, :id => id_value}, :class =>"btn btn-primary", :style=> "float:none" %>
    </div>
</div>
