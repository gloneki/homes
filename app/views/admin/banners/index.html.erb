<%= simple_form_for ([:admin, @banner]) do |f| %>
	<div class="sideBySide">
		<h3 style="padding:0px">Configurações Banner
		<%= link_to '', {:controller => 'banners', :action => 'log', :id => @banner.id}, :class => 'ico-tag', :style => "float:right" %>
		</h3>
	</div>
	<br/>
	<%=f.input :name, :input_html =>{:required => true, :class => 'span6'}%>
	<%=f.fields_for :banner_files do |builder|%>
  		<%=render :partial => 'banner_file_fields', :locals => {:f => builder}%>
  	<%end%>
	<%= link_to_add_fields "", f, :banner_files %>
	<div class="form-actions">
		<%=link_to 'Voltar', admin_module_extensions_path, :class => "btn"%>
	    <%= f.submit 'Salvar', :class=>"btn btn-primary btn-large " %>
	</div>
<% end %>
